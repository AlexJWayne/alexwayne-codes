---
import BgCanvasWgpu from "../components/bg-canvas-webgpu/BgCanvasWgpu.astro"
---

<!doctype html>
<html lang="en">
  <head class="m-0 h-screen w-screen">
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>AlexWayne.codes</title>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Jura:wght@300..700&family=Lexend:wght@100..900&display=swap");
    </style>
  </head>

  <body
    class="m-0 h-screen w-screen bg-gradient-to-b from-blue-900 to-sky-950 to-[900px] py-10 font-normal"
  >
    <BgCanvasWgpu />
    <div class="relative m-auto w-[880px] p-10 backdrop-blur" id="content">
      <a href="/"
        ><h1
          class="-mt-10 mb-10 font-[Jura] text-5xl font-bold text-transparent decoration-orange-400 drop-shadow-md transition hover:translate-x-2"
        >
          <span
            class="bg-gradient-to-tr from-red-400 to-yellow-500 bg-clip-text"
            >AlexWayne</span
          ><span
            class="bg-gradient-to-br from-yellow-500 to-red-500 bg-clip-text"
            >&lt;Codes&gt;</span
          >
        </h1></a
      >
      <div
        class="prose prose-invert prose-h2:font-medium prose-a:transition-all hover:prose-a:text-indigo-400"
      >
        <slot />
      </div>
    </div>
  </body>
</html>
