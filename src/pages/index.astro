---
import Layout from "../layouts/Layout.astro"
import Link from "../components/Link.astro"
import GridList from "../components/GridList.astro"
import GridListItem from "../components/GridListItem.astro"

import { getCollection } from "astro:content"

const posts = (await getCollection("posts"))
  .sort((a, b) => a.data.date.getTime() - b.data.date.getTime())
  .reverse()
---

<Layout>
  <p class="relative -top-8">
    I'm a software developer by day, <span
      class="drop-shadow-dark-glow font-semibold text-indigo-500"
      >and also by night.</span
    >
  </p>

  <GridList title="A few of the things I've made">
    {
      posts.map((post) => (
        <GridListItem href={post.id} image={post.data.cover?.src}>
          {post.data.title}
        </GridListItem>
      ))
    }
  </GridList>

  <h2 class="text-xl font-bold">A few of my links</h2>

  <ul class="mb-12 list-disc pl-6">
    <li><Link href="https://github.com/AlexJWayne">Github</Link></li>
    <li><Link href="http://alexwayne.rocks">Music</Link></li>
  </ul>

  <h2 class="text-xl font-bold">A few of the things I use</h2>

  <ul class="mb-12 list-disc pl-6">
    <li>
      <Link href="https://www.zsa.io/voyager">ZSA Voyager</Link> in <Link
        href="https://configure.zsa.io/voyager/layouts/qGmLZ/latest/0"
        >Colemak DH</Link
      >
    </li>
    <li>
      <Link href="https://zed.dev">Zed</Link> in <Link
        href="https://zed.dev/docs/vim">Vim mode</Link
      >
    </li>
  </ul>
</Layout>
